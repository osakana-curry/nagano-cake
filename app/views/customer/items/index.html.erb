<!--ジャンル検索-->
<table>
    <tr>
      <th>ジャンル検索</th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name %></td>
    </tr>
    <% end %>
</table>

<!--商品一覧-->
<h4>商品一覧</h4>

<% @items.each do |item| %>

<div>
  <%= image_tag item.get_image, size:'200×100' %><br>
  <%= item.name %><br>
  ￥<%= item.add_tax_price.to_s(:delimited) %>
</div>

<% end %>