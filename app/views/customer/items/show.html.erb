<!--ジャンル検索-->
<table>
    <tr>
      <th>ジャンル検索</th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name %></td>
    </tr>
    <% end %>
</table>

<%= image_tag @item.get_image(100,100) %>
<%= @item.name %>
<%= @item.text %>
￥<%= @item.add_tax_price.to_s(:delimited) %>(税込)


<%= form_with model: @item, url: customer_carts_path do |f| %>

  <%= f.hidden_field :item_id, :value => @item.id %>
　<%= f.select :amount, *[1..10] %>

  <%= f.submit 'カートに入れる' %>
<% end %>


