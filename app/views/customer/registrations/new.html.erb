<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"(姓)"%><br>
    <%= f.text_field :last_name, autofocus: true, placeholder: "おさかな" %>

  </div>

  <div class="field">
    <%= f.label :"(名)" %><br>
    <%= f.text_field :first_name, placeholder: "かれー" %>
  </div>

  <div class="field">
    <%= f.label :"(セイ)" %><br>
    <%= f.text_field :last_name_kana, placeholder: "オサカナ" %>
  </div>

  <div class="field">
    <%= f.label :"(メイ)" %><br>
    <%= f.text_field :first_name_kana, placeholder: "カレー" %>
  </div>

  <div class="field">
    <%= f.label :"Eメール" %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder: "osakanacurry@mail.com" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号" %><br>
    <%= f.text_field :postcode, placeholder: "xxxxxxx" %>
  </div>

  <div class="field">
    <%= f.label :"住所" %><br>
    <%= f.text_field :address, placeholder: "東京都　港区" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号（ハイフンなし)" %><br>
    <%= f.text_field :phone_number, placeholder: "09012345678" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード入力" %>
  </div>

  <div class="field">
    <%= f.label :"確認用パスワード" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード入力" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: 'btn btn-success mr-3' %>
  </div>
<% end %>

<%= render "customer/shared/links" %>