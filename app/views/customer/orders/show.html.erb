<div class= "row">
  <div class="col-sm-8 col-md-8 col-lg-8 px-8">
    <h2>注文履歴詳細</h2>
    <p><strong>注文情報</strong></p>
    <table class="table">
      <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
     <tr><th>配送先</th><td><%= "〒 #{@order.postcode}" %><br><%= "#{@order.address}" %><br><%= "#{@order.full_name}"%></td></tr>
      <tr><th>支払方法</th><td><%= @order.pay_type %></td></tr>
      <tr><th>ステータス</th><td><%= @order.order_status %></td></tr>
    </table>
  </div>
  <div class="col-sm-3 col-md-3 col-lg-3 px-3 offset-1">


     <p><strong>請求金額</strong></p>
     <table class="table">
       <tr class=  "thead-light"><th>商品合計</th>
        <td><% total = 0 %>
             <% @order.order_details.each do |order_detail| %>
              <% total += order_detail.amount*((order_detail.item.price)*1.1).to_i %>
             <% end %>
             <%= total.to_s(:delimited) %>
        </td>
       </tr>
       <tr class="thead-light"><th>配送料</th><td><%= @order.delivery_fee.to_s(:delimited) %></td></tr>
       <tr class="thead-light"><th><strong>ご請求額</strong></th><td><%= @order.charge.to_s(:delimited) %></td></tr>
     </table>
  </div>

  <p><strong>注文内容</strong></p>
  <table class="table">
   <thead class= "thead-light">
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
   </thead>
   <tbody>

   <% @order.order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= subtotal = ((order_detail.item.price)*1.1).round.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><% total = 0 %>
          <% total += order_detail.amount*((order_detail.item.price)*1.1).to_i %>
            <%= total.to_s(:delimited) %>
      </td>
    </tr>
   <% end %>
   </tbody>
    </table>
   	<%= link_to "注文履歴一覧に戻る",customer_orders_path, class: "btn btn-primary"%>

  </div>
</div>