<div class="col-xs-12">
  <h4 style="color:#66583f;"><strong>会員情報編集</strong></h4>

  <%= form_with(model:@customer, url:customer_update_path,method: :patch) do |f| %>
  <div class="col-xs-12">
    <div class="form-group col-xs-12">
      <%= f.label :"氏名", class: "col-sm-3 control-label" %>
      <%= f.text_field :last_name, class: "last_name col-sm-2" %>
      <%= f.text_field :first_name, class: "first_name col-sm-2" %>
    </div>
    <div class="form-group col-xs-12">
      <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
      <%= f.text_field :last_name_kana, class: "kana_last_name col-sm-2" %>
      <%= f.text_field :first_name_kana, class: "kana_first_name col-sm-2" %>
    </div>
    <div class="form-group col-xs-12">
      <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-2" %>
    </div>
    <div class="form-group col-xs-12">
      <%= f.label :"郵便番号", class: "col-sm-3 control-label" %>
      <%= f.text_field :postcode, class: "col-sm-2" %>
    </div>
    <div class="form-group col-xs-12">
      <%= f.label :"住所", class: "col-sm-3 control-label" %>
      <%= f.text_field :address, class: "col-sm-6" %>
    </div>
    <div class="form-group col-xs-12">
      <%= f.label :"電話番号", class: "col-sm-3 control-label" %>
      <%= f.text_field :phone_number, class: "col-sm-2" %>
    </div>
    　<%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
    　<%= link_to "退会する",customer_quit_path, class: "btn btn-danger"%>
  </div>
  <%end%>
</div>
