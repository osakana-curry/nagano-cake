	<div class="row">
	<div class="col-xs-offset-1 col-xs-8">
		<h4>マイページ</h4>
    <p>
      <strong><i class="far fa-user"></i>登録情報</strong>
      <%= link_to "編集する",customer_edit_path, class: "btn btn-success"%>
    </p>
      
      <table class="table table-bordered table-condensed">
	      <tbody>
		      <tr>
			      <td class="info">氏名</td>
			      <td class="text-left">　<%=@customer.last_name%> <%=@customer.first_name%></td>
		      </tr>
		      <tr>
			      <td class="info">カナ</td>
			      <td class="text-left"><%=@customer.last_name_kana%> <%=@customer.first_name_kana%></td>
		      </tr>
		      <tr>
			      <td class="info">郵便番号</td>
			      <td class="text-left"><%= @customer.postcode %></td>
		      </tr>
		      <tr>
			      <td class="info">住所</td>
			      <td class="text-left"><%= @customer.address %></td>
		      </tr>
		      <tr>
			      <td class="info">電話番号</td>
			      <td class="text-left"><%= @customer.phone_number %></td>
		      </tr>
		      <tr>
			      <td class="info">メールアドレス</td>
			      <td class="text-left"><%= @customer.email %></td>
		      </tr>
	      </tbody>
      </table>
      
      <div class="bottom">
      	<p>
      	  <strong>配送先</strong>
      	  <%= link_to "一覧を見る",customer_edit_path, class: "btn btn-primary"%>
      	  <%# 後に配送先一覧　address_path を代入%>
      	</p>
      	<p>
          <strong>注文履歴</strong>
          <%= link_to "一覧を見る",customer_edit_path, class: "btn btn-primary"%>
          <%# 後に注文履歴　orders_path を代入%>
      	</p>
      </div>
	</div>
</div>

</div>
