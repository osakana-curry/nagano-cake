<h4>配送先登録 / 一覧</h4>

<%= form_with model: @address, url: customer_addresses_path do |f| %>

  <p>
  <%= f.label :postcode, "郵便番号" %>
  <%= f.text_field :postcode %>
  </p>

  <p>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  </p>

  <p>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>
  </p>

  <%= f.submit "新規登録", class: 'btn btn-success mr-3' %>

<div class="col-10 ml-3">
        <table class="table table-hover table-bordered">
          <thead>
                <tr class="info">
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th></th>
                </tr>
            </thead>
          <tbody>
  　　　　　　　　<% @addresses.each do |address| %>
    　　　　　<tr>
    　　　　　  <td><%= address.postcode %></td>
     　　　　 <td><%= address.address %></td>
     　　　　 <td><%= address.name %></td>

    　　　　　 <td><%= link_to '編集する', edit_customer_address_path(address.id), class: 'btn btn-success mr-3' %>
    　　　　　<%= link_to '削除する', customer_address_path(address.id), method: :delete, data: {confirm: "投稿を削除します。よろしいですか？"}, class: 'btn btn-danger' %></td>
  　　　　　　  </tr>
 　　　　　　　　 <% end %>
 　　　　　　 </tbody>
       </table>
</div>

<% end %>