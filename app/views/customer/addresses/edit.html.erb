<h4>配送先編集</h4>

<% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @address, url:customer_address_path, method: :patch do |f| %>

  <p>
  <%= f.label :postcode, "郵便番号" %>
  <%= f.text_field :postcode %>
  </p>

  <p>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  </p>

  <p>
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>
  </p>

  <%= f.submit "変更内容を保存", class: 'btn btn-success mr-3' %>

<% end %>