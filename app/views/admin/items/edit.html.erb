<div class="row my-3">
 <h2>商品編集</h2>
</div><!--商品編集ページ-->

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
<table class="table">
 <tr><th>商品画像</th><td style = "border-top: none;"><%= f.file_field :image, accept: "image/*" %></td></tr><!--画像編集フォーム-->
 <tr><th>商品名</th><td style = "border-top: none;"> <%= f.text_field :name, placefolder: "商品名" %></td></tr><!--商品名編集フォーム-->
 <tr><th>商品説明</th><td style = "border-top: none;"><%= f.text_area :text, placefolder: "ここに説明文を記述します" %></td></tr><!--商品説明編集フォーム-->
 <tr><th>ジャンル</th><td style = "border-top: none;"><%= f.collection_select(:genre_id, @genres, :id, :name) %></td></tr><!--ジャンル選択編集フォーム-->
 <tr><th>税抜価格</th><td style = "border-top: none;"> <%= f.text_field :price %>円</td></tr><!--価格編集フォーム-->
 <tr><th>販売ステータス</th>
  <td style = "border-top: none;">
  <%= f.radio_button :sale_status, :販売中, checked: "checked" %>
  <%= f.label :販売中, class: "sale_status_label" %>
  <%= f.radio_button :sale_status, :販売停止中 %>
  <%= f.label :販売停止中, class: "sale_status_label" %>
  </td>
 </tr> <!--販売ステータス編集-->
</table>
  <%= link_to "削除", admin_item_path(@item), method: :delete,class: "btn btn-danger" %>
  <%= f.submit "変更を保存", class: "btn btn-success" %>

<% end %>
