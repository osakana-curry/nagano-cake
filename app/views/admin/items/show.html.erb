<div class= "row text-center">
  <div class = "col-md-12 mt-5">
   <h2>商品詳細</h2>
  </div>
</div>
<div class = "row my-5 d-flex justify-content-center">
   <div class="col-lg-3 mt-3">
   <%= image_tag @item.get_image(200,200) %>
   </div>

   <div class="col-lg-5 mt-3">
    <table>
     <tr><th style="width: 50%">商品名</th><td><%= @item.name %></td></tr><!--商品名-->
     <tr><th style="width: 50%">商品説明</th><td><%= @item.text %></td></tr><!--商品説明-->
     <tr><th style="width: 50%">ジャンル</th><td><%= @item.genre.name %></td></tr><!--ジャンル-->
     <tr><th style="width: 50%">税込価格 (税抜価格)</th><td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td></tr><!--税込価格-->
     <tr><th style="width: 50%">販売ステータス</th><td><%= @item.sale_status %></td></tr>
   </table>
   <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
   </div>
</div>
