<div class = "container">
  <div class= "row text-center">
    <div class = "col-md-12 mt-5">
      <h2>ジャンル一覧・追加</h2>
    </div>
  </div>
  <div class ="row my-5 d-flex justify-content-center">
    <div class="col-xs-12">
      <%= form_with model: @genre,url: admin_genres_path do |f| %>
        <%= f.label :name,"ジャンル名" %>
        <%= f.text_field :genres_name %>
        <%= f.submit '新規登録',class:"btn btn-success my-3 mr-3" %>
      <% end %>
    </div>
  </div>

  <div class ="row my-5 d-flex justify-content-center">
    <div class="col-lg-5 mt-3">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genres_name %></td>
            <td><%= link_to "Edit", edit_admin_genre_path(genre.id),class:"btn btn-success my-3 mr-3" %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>




</div>