<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col">
      <h2 class="text-center">ジャンル編集</h2>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class= "col-5">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id),method: :patch do |f| %>
      <div class="form-group">
        <%= f.label "ジャンル名",class:"form-label" %>
        <%= f.text_field :name,class:"form-control" %>
      </div>
      <div class="col-md justify-content-around">
        <%= link_to admin_genres_path do %>
         <i class="fa-solid fa-circle-chevron-left fa-2x" style="color: #352B30;"></i>
        <% end %>
        <%= f.submit '変更を保存', class:"btn btn-success" %>
        <%= link_to "削除", admin_genre_path(@genre.id), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-danger" %>
      </div>
      <% end %>
    </div>
  </div>
</div>



