<div class="row">
    <div class="col-xs-12">
      <h4><%="#{@customer.last_name}#{@customer.first_name}さんの会員情報編集"%></h4>

   <%= form_with(model:@customer, url:admin_customer_path,method: :patch) do |f| %>
      <div class="col-xs-12">

        <div class="form-group col-xs-12">
          <%= f.label :"会員",class: "col-sm-3 control-label" %>
          <%= f.label :"#{@customer.id}", class: "col-sm-3 control-label" %>
        </div>

        <div class="form-group col-xs-12">
          <%= f.label :"氏名", class: "col-sm-3 control-label" %>
          <%= f.text_field :last_name, class: "last_name col-sm-3" %>
          <%= f.text_field :first_name, class: "first_name col-sm-3" %>
        </div>

        <div class="form-group col-xs-12">
          <%= f.label :"フリガナ", class: "col-sm-3 control-label" %>
          <%= f.text_field :last_name_kana, class: "kana_last_name col-sm-3" %>
          <%= f.text_field :first_name_kana, class: "kana_first_name col-sm-3" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"郵便番号", class: "col-sm-3 control-label" %>
          <%= f.text_field :postcode, class: "col-sm-4" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"住所", class: "col-sm-3 control-label" %>
          <%= f.text_field :address, class: "col-sm-8" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"電話番号", class: "col-sm-3 control-label" %>
          <%= f.text_field :phone_number, class: "col-sm-4" %>
        </div>

        <div class="form-grop col-xs-12">
          <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
        　<%= f.radio_button :is_deleted, true %>
        　<%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
        　<%= f.radio_button :is_deleted, false %>
        　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
        </div>

        <div>
          <%= f.submit "変更を保存", class: "btn btn-success save col-xs-6" %>
          </div>

      </div>
      <%end%>
    </div>
</div>
