<div class="col-xs-12 ">
      <h4><%="#{@customer.last_name}#{@customer.first_name}さんの会員情報編集"%></h4>

   <%= form_with(model:@customer, url:admin_customer_path,method: :patch) do |f| %>
      <table class="table">
        <tbody>
        <tr>
          <td><%= f.label :"会員ID"%></td>
          <td><%= f.label :"#{@customer.id}" %></td>
        </tr>

        <tr>
          <td><%= f.label :"氏名"%></td>
          <td>
            <%= f.text_field :last_name,class: "col-sm-2" %>
            <%= f.text_field :first_name,class: "col-sm-2"%>
          </td>
        </tr>

        <tr>
          <td><%= f.label :"フリガナ"%></td>
          <td>
            <%= f.text_field :last_name_kana,class: "col-sm-2" %>
            <%= f.text_field :first_name_kana,class: "col-sm-2"%>
          </td>
        </tr>
       
        <tr>
          <td class="col-sm-2"><%= f.label :"郵便番号"%></td>
          <td class="col-sm-8"><%= f.text_field :postcode,class: "col-sm-2"%></td>
        </tr>
        <tr>
          <td><%= f.label :"住所"%></td>
          <td><%= f.text_field :address,class: "col-sm-8"%></td>
        </tr>
        
        <tr>
          <td><%= f.label :"電話番号" %></td>
          <td><%= f.text_field :phone_number ,class: "col-sm-2"%></td>
        </tr>
        
         <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-sm-4"%></td>
        </tr>

        <tr>
          <td><%= f.label :"会員ステータス" %></td>
        　<td>
        　  <%= f.radio_button :is_deleted, true %>
        　 <%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
         　<%= f.radio_button :is_deleted, false %>
         　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
        　</td>
        　

        <br>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-success save " %></td>
          </tr>
        </tbody>
      </table>
      <%end%>
    </div>
